body, html
  line-height :1
  font-weight:200
  font-family :'PingFang SC','STHeitiSC-Light','Helvetica-Light',SimSun,arial,sans-serif
.clearfix
  display:inline-block
  &:after
    display:block
    content: '.'
    height :0
    clear :both
    visibility :hidden
    line-height :0
@media (-webkit-device-pixel-ratio: 1.5),(device-pixel-ratio: 1.5)
  .borderBottom
    &::after
      -webkit-transform: scaleY(0.7)
      transform: scaleY(0.7)

@media (-webkit-device-pixel-ratio: 2),(device-pixel-ratio: 2)
  .borderBottom
    &::after
      -webkit-transform: scale(0.5)
      transform: scale(0.5)
